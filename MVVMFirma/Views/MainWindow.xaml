<Window x:Class="MVVMFirma.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Manage" Height="300" Width="300" WindowState="Maximized"
        xmlns:vm="clr-namespace:MVVMFirma.Views"
        >
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml"  />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="2">
            <MenuItem Header="_Plik"/>
            <!--<MenuItem Header="_Magazyn">
                <MenuItem Header="Wszystkie towary" />
                <MenuItem Header="Nowy towar"/>
                <MenuItem Header="Wydanie Zewnętrzne (WZ)"/>
                <MenuItem Header="Przyjęcie Zewnętrzne (PZ)"/>
            </MenuItem>-->
            <MenuItem Header="Magazyn">
                <MenuItem Command ="{Binding Path=MenuCommand}"
                          CommandParameter="{Binding}"
                          Header="{Binding DisplayText}"
                          />
            </MenuItem>
        </Menu>
        <!--<ToolBar Grid.Column="0" Grid.ColumnSpan="2" Margin="2,0,2,34" Grid.RowSpan="2">
            <ToggleButton Width="32" Height="32" Background="Blue" Margin="2">CosTamn</ToggleButton>
            <ToggleButton Width="32" Height="32" Background="Yellow" Margin="2"/>
        </ToolBar>-->
        <Border Grid.Row="2" Grid.Column="0">
            <HeaderedContentControl 
                Content="{Binding Path=Commands}" 
                ContentTemplate="{StaticResource CommandsTemplate}"
                Style="{StaticResource MainHCCStyle}" Margin="0,-42,0,0"
                >
            </HeaderedContentControl>
        </Border>
        <Border Grid.Row="2" Grid.Column="1">
            <HeaderedContentControl 
                Content="{Binding Path=Workspaces}"
                ContentTemplate="{StaticResource WorkspacesTemplate}"
                Style="{StaticResource MainHCCStyle}" MinHeight="500" VerticalAlignment="Top" Margin="0,-42,0,0" Height="471"
            />
        </Border>
        <StatusBar Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock>Sebastian Konstanty</TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>WSB-NLU</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
